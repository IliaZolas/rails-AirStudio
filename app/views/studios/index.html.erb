
  <div class="text-center top-margin">
    <h1 class="index-title">FIND THE BEST RECORDING STUDIO</h1>
  </div>
  <div class="cards-container">
    <div class="cards">
      <% @studios.each do |studio| %>
          <div class="card" style="width: 25rem;">
            <div class="card-header">
              <h2><%= studio.title %></h2>
            </div>
            <img class="card-img-top" src="https://static.questiondeson.com/img/studios/a/1-studio-a-2019-front.jpg" alt="Card image cap">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start">
                <p class="card-text col-9 card-studio-address"><%= studio.address %></p>
                <p class="card-text card-studio-price">CHF <%= studio.price %>.-</p>
              </div>
            </div>
            <div class="card-footer">
              <%= link_to "VIEW DETAILS", studio_path(studio), class: 'btn btn-warning btn-lg btn-block' %>
            </div>

          </div>
        <% end %>
      </div>
      <div id="map"
        style="width: 90%; height: 100vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="pk.eyJ1IjoiamhkMTAwNSIsImEiOiJja2hlb296N2swaHFzMnNsNjNvdzd6YjVwIn0.ARhNT4a5lKji24U8myBKZQ">
      </div>
  </div>




