
<div class="container-mybookings">
  <h1 class="header-mybookings">My Studios</h1>
  <div class="list-bookings">
    <div class="card-mybookings">
      <% @studios.each do |studio| %>
        <div class="card-mybooking">
         <div class="img-mybookings">
            <% if studio.photo.attached? %>
              <%= cl_image_tag studio.photo.key, class: "card-img-top" %>
          <% end %>
        </div>
          <h1><strong><%= studio.title %></strong> </h1>
          <p><%= studio.description %></p>
          <p><strong><%= studio.price %> - Chf / Day</strong></p>
          <p><%= studio.address %></p>
          <p class='delete-button'>
          <%= link_to "Delete",
                       studio_path(studio),
                       method: :delete,
                       data: {confirm: "Are you sure?"} %>
          </p>
        </div>
        <% end %>
      </div>
    </div>
</div>
