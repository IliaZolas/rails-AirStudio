
<div class="container-mybookings">
  <h1 class="header-mybookings">My Bookings</h1>
  <div class="list-bookings">
    <div class="card-mybookings">
      <% @bookings.each do |booking| %>
        <div class="card-mybooking">
          <div class="img-mybookings">
            <% if booking.studio.photo.attached? %>
            <%= cl_image_tag booking.studio.photo.key, crop: :fill, class: "w-100 h-100 shadow rounded booking-img-div"%>
          <% end %>
          </div>
          <h1><strong><%= booking.studio.title %></strong></h1>
          <p><strong>Check-in:</strong> <%= booking.checkin %>, <strong>Check-out:</strong> <%= booking.checkout %></p>
          <p><%= booking.studio.address %></p>
          <p><strong>Daily Price:</strong> <%= booking.studio.price %>Chf</p>
            <div class="total-price">
            <h2><strong>Total Price: <%= booking.total_price %>Chf</strong></h2>
            </div>
          <p class='delete-button'>
          <%= link_to "Delete",
                       booking_path(booking),
                       method: :delete,
                       data: {confirm: "Are you sure?"}  %>
          </p>
        </div>
        <% end %>
      </div>
    </div>
</div>

